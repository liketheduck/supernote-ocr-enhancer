# Supernote OCR Enhancer Configuration
# Copy this to settings.env and customize

# Path to your Supernote data directory (where .note files are stored)
SUPERNOTE_DATA_PATH=/path/to/your/supernote/data

# OCR API endpoint (the MLX-VLM OCR server)
OCR_API_URL=http://host.docker.internal:8100

# Processing settings
PROCESS_INTERVAL=0          # 0 = single run, >0 = interval in seconds
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR

# Write settings
WRITE_TO_NOTE=true          # Write OCR data back to .note files
CREATE_BACKUPS=true         # Create backups before modifying files
